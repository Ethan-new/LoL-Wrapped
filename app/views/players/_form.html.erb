<%= form_with url: players_lookup_path, method: :post, data: { turbo_frame: "lookup_result", controller: "lookup-form", action: "turbo:submit-start->lookup-form#submit" }, class: "rounded-xl p-8" do |f| %>
  <div class="flex overflow-hidden rounded-lg border border-zinc-700">
    <%= select_tag :region, options_for_select([["NA", "na"], ["EU", "eu"], ["Asia", "asia"], ["Sea", "sea"]], params[:region].presence || "na"), class: "shrink-0 border-0 border-r border-zinc-700 bg-transparent px-4 py-3 text-white focus:border-zinc-500 focus:ring-0 focus:outline-none [&>option]:bg-zinc-900 [&>option]:text-white" %>
    <%= text_field_tag :riot_id, params[:riot_id], placeholder: "Game name#tagline", autocomplete: "off", class: "min-w-0 flex-1 border-0 border-r border-zinc-700 bg-transparent px-4 py-3 text-white placeholder-zinc-500 focus:ring-0 focus:outline-none" %>
    <%= button_tag type: "submit", class: "shrink-0 border-0 border-l border-zinc-700 bg-transparent px-4 py-3 text-white transition-colors hover:bg-zinc-800 focus:outline-none focus:ring-0 disabled:cursor-not-allowed disabled:opacity-50", aria: { label: "Look up player" } do %>
      <span data-lookup-form-target="arrow">â†’</span>
    <% end %>
  </div>
<% end %>
