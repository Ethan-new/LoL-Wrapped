<%= turbo_frame_tag "lookup_result" do %>
  <div class="w-full space-y-4">
    <%= render "form" %>
    <div class="min-h-[8rem]">
      <% if local_assigns[:error].present? %>
        <div class="flex flex-col items-center gap-2 text-center">
          <p class="text-sm font-medium text-red-400">Lookup Failed — <%= error %></p>
          <% if local_assigns[:show_region_hint] %>
            <p class="text-xs text-white">Make sure you choose the correct region for your account.</p>
          <% end %>
          <% if local_assigns[:details]&.any? %>
            <ul class="mt-2 space-y-1 rounded-lg bg-black/30 p-4 text-left text-sm text-zinc-300">
              <% details.each do |detail| %>
                <li>• <%= detail %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
